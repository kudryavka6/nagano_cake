<%= render 'public/homes/header' %>

<h2>新規登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label '名前' %><br />
    (姓)<%= f.text_field :last_name, autofocus: true %>(名)<%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label 'フリガナ' %><br />
    (セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label 'メールアドレス' %><br />
    <%= f.text_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label '郵便番号(ハイフンなし)' %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label '住所' %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label '電話番号(ハイフンなし)' %><br />
    <%= f.telephone_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label 'パスワード(6文字以上)' %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード(確認用)' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
<p><%= link_to "こちら", new_customer_registration_path %>
   からしてください。

