<header>
  <li><%= link_to "商品一覧", admin_path %></li>
  <li><%= link_to "会員一覧", admin_customers_path %></li>
  <li><%= link_to "注文履歴一覧", admin_items_path %></li>
  <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
  <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
</header>

<h3>ジャンル一覧・追加</h3>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<h4>ジャンル名</h4>

<%= f.text_field :name %>

<%= f.submit '新規登録' %>

<% end %>

<h3>ジャンル</h3>
<% @genres.each do |genre| %>
<span>
  <br><%= genre.name %>
  <%= link_to "編集" , edit_admin_genre_path(genre.id) %>
  </br>
</span>
<% end %>
