<%= render 'header' %>

<h3>会員登録編集</h3>
<%= form_with model: @customer do |f| %>
<div>
    氏名 <%= f.text_field :last_name %><%= f.text_field :first_name %>
</div>

<div>
    フリガナ <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
</div>

<div>
    郵便番号 <%= f.text_field :postal_code %>
</div>

<div>
    住所 <%= f.text_field :address %>
</div>

<div>
    電話番号 <%= f.telephone_field :telephone_number %>
</div>

<div>
    メールアドレス <%= f.text_field :email %>
</div>

<%= f.submit '編集内容を保存' %>
<% end %>