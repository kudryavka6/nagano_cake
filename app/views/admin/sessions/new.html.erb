              　<% end %>
              </li>
              <li class="nav-item"><%= link_to new_admin_session_path, class: "nav-link" do %>
                <i class="btn btn-outline-secondary">商品一覧</i>
                <% end %>
              </li>
              <li class="nav-item"><%= link_to new_admin_session_path, class: "nav-link" do %>
                <i class="btn btn-outline-secondary">新規登録</i>
                <% end %>
              </li>
              <li class="nav-item"><%= link_to new_admin_session_path, class: "nav-link" do %>
                <i class="btn btn-outline-secondary">ログイン</i>
                <% end %>
              </li>
            </ul>
        </div>
      </nav>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-12 align-self-start">
        <h3>管理者ログイン</h3>
      </div>
        <div class="mx-auto">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>

