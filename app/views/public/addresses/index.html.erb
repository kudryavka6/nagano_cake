<%= render 'public/customers/header' %>

<h3>配送先登録 / 一覧</h3>
<%= form_with model: @address do |f| %>

  <h5>郵便番号（ハイフンなし）</h5>
  <%= f.text_field :postal_code %>

  <h5>住所</h5>
  <%= f.text_field :address %>

  <h5>宛名</h5>
  <%= f.text_field :name %>

  <%= f.submit '新規投稿' %>

<% end %>

<% @addresses.each do |address| %>

<h5>郵便番号</h5>
<%= address.postal_code %>

<h5>住所</h5>
<%= address.address %>

<h5>宛名</h5>
<%= address.name %>

<div>
  <%= link_to '編集する', edit_address_path(address.id) %>
  <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
</div>

<% end %>