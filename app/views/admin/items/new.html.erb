<header>
  <li><%= link_to "商品一覧", admin_path %></li>
  <li><%= link_to "会員一覧", admin_customers_path %></li>
  <li><%= link_to "注文履歴一覧", admin_items_path %></li>
  <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
  <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
</header>

<h3>商品新規登録</h3>
<%= form_with model: @item, url: admin_items_path do |f| %>

<h4>商品画像</h4>
<%= f.file_field :image, accept: "image/*" %>

<h4>商品名</h4>
<%= f.text_field :name %>

<h4>商品説明</h4>
<%= f.text_area :introduction %>

<h4>ジャンル</h4>

<h4>税抜価格</h4>
<%= f.text_field :price %>円

<h4>販売ステータス</h4>
<%= f.radio_button :is_active, "販売中" %>販売中　<%= f.radio_button :is_active, "販売停止中" %>販売停止中

<br><%= f.submit '新規登録' %></br>
<% end %>
